<schemalist>
	<schema gettext-domain="xmradio" id="com.timxx.xmradio" path="/apps/xmradio/">
		<key name="window-pos" type="(ii)">
			<default>(-1,-1)</default>
			<summary>Window position</summary>
			<description>The last window position</description>
		</key>
		<key name="theme" type="s">
			<default>'pure'</default>
			<summary>UI theme</summary>
			<description>Set null or leave empty to use gtk theme</description>
		</key>
		<key name="radio-url" type="s">
			<default>''</default>
			<summary>radio url</summary>
			<description>Radio url</description>
		</key>
		<key name="radio-name" type="s">
			<default>''</default>
			<summary>radio name</summary>
			<description>radio name</description>
		</key>
		<key name="auto-login" type="b">
			<default>false</default>
			<summary>auto login</summary>
			<description>auto login</description>
		</key>
		<key name="usr" type="s">
			<default>''</default>
			<summary>user name</summary>
			<description>user name</description>
		</key>
		<key name="pwd" type="s">
			<default>''</default>
			<summary>password</summary>
			<description>user password</description>
		</key>
		<key name="volume" type="d" >
			<default>1.0</default>
			<summary>Volume</summary>
			<description>Volume level</description>
		</key>
	</schema>
	<schema id="com.timxx.xmradio.plugins" path="/apps/xmradio/plugins/">
		<key name="active-plugins" type="as">
		<default>['notification', 'indicator', 'mpris']</default>
		<summary>Active plugins</summary>
		<description>List of active plugins.</description>
		</key>
	</schema>
	<schema id="com.timxx.xmradio.plugins.indicator" path="/apps/xmradio/plugins/indicator/">
		<key name="hide-on-exit" type="b">
		<default>true</default>
		<summary>Hide on exit</summary>
		<description>Hide window when playing, instead default exit action</description>
		</key>
  </schema>
</schemalist>
